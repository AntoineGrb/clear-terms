{
  "manifest_version": 3,
  "name": "Clear Terms",
  "version": "1.1.0",
  "description": "Summarize Terms & Privacy pages in seconds. Get a clear Aâ€“E score and key risks before you accept anything.",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/hash.js",
        "content-script/config.js",
        "content-script/exclusions.js",
        "content-script/extraction.js",
        "content-script/detection.js",
        "content-script/toast.js",
        "content-script/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://clear-terms.onrender.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon/*.png"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
